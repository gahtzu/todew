<h1>Jason's Todews</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Todos</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.name %>:</td>
    <td><%= list.description %></td>
	<td>
		<ul>
		<% few_todos(list).each do |todo| %>
			<li><%= todo.task %></li>
		<% end %>
		<% if list.todos.count != 0 %>
			<li>...</li>
		<% end %>
		</ul>
	</td>

    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

